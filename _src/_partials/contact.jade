form(action="https://formspree.io/stuart@smbkr.xyz", method="post" id="contact-form")
	input(type="text", name="_gotcha", id="_gotcha", class="is-hidden")
	label.label(for="name") Name
	p.control
		input(type="text", pattern="[a-zA-Z0-9]{2,}", name="name", id="name", placeholder="What should I call you?", class="input fillable")
		span.help.is-danger.is-invisible Please enter your name
	label.label(for="email") Email
	p.control
		input(type="email", pattern=".+@.+\.+.{2,}", name="email", id="email", placeholder="How should I get back to you?", class="input fillable")
		span.help.is-danger.is-invisible Please enter a valid email address
	label.label(for="message") Message
	p.control
		textarea(name="message", pattern="[a-zA-Z0-9]{2,}", id="message", placeholder="What would you like to say?", class="textarea fillable")
		span.help.is-danger.is-invisible Please enter a message
	p.control.is-clearfix#buttons
		button(title="Send your message").button.is-medium.is-primary.is-disabled.is-pulled-right#send-button Send
		button(title="Clear all fields and reset the form").button.is-medium.is-outlined.is-disabled.is-pulled-right#clear-button Clear
	.control.notification.is-hidden#response-container
		button.delete
		span#response-text